{
  "version": 2,
  "name": "foodiesbnb",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/foodiesbnb"
      }
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.js)",
      "headers": [
        {
          "key": "cache-control", 
          "value": "s-maxage=31536000,immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.css)",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://developer:F%40%40dies8n8@foodiesbnb.j58ys97.mongodb.net/foodiesbnb",
    "JWT_SECRET": "tu_jwt_secret_super_seguro_aqui_2024_foodiesbnb"
  }
}
